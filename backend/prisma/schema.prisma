// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  promotion String   @default("EMI") // Promotion EMlyon (EMI ou Dev)
  avatarUrl String   @default("https://api.dicebear.com/7.x/avataaars/svg?seed=default")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  checkIns      CheckIn[]
  createdEvents Event[]         @relation("EventCreator")
  attendEvents  EventAttendee[]
}

model CheckIn {
  id           String   @id @default(uuid())
  userId       String
  locationName String
  latitude     Float
  longitude    Float
  statusEmoji  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator   User            @relation("EventCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  attendees EventAttendee[]

  @@index([creatorId])
  @@index([date])
}

model EventAttendee {
  eventId String
  userId  String

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([eventId, userId])
  @@index([eventId])
  @@index([userId])
}
